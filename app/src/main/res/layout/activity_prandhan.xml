<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prandhan"
    android:background="@color/Background_black">

    <TextView
        android:id="@+id/pt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Pradhan Mantri Fasal Bima Yojana (PMFBY)"
        android:textColor="@color/text_black"
        android:textSize="30sp"
        android:padding="10dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pradhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pt1"
        android:padding="10dp"
        android:text="It is a crop insurance scheme where multiple stakeholders are integrated on a single platform.\n\nFarmers need not worry about income during natural calamities.\n\nFarmers are to be given financial support by way of insurance.\n\nFarmers shall continue to do farming even when faced with crop loss.\n\nCredit flow is ensured in case of crop loss due to pests and natural calamities."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />





</RelativeLayout>
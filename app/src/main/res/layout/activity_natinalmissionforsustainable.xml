<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".natinalmissionforsustainable"
    android:background="@color/Background_black">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pt1"
        android:text="National Mission For Sustainable Agriculture (NMSA)"
        android:textColor="@color/text_black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        />


    <TextView
        android:id="@+id/pradhan"
        android:layout_below="@id/pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The scheme intends to make the farmer sustainable and agriculture a productive and lucrative business.
Farmers can take up various kinds of agricultural activities. Farmers can use new and modern techniques in farming. Farmers can increase their yield. Farmers are encouraged to grow different varieties of crops."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>





</RelativeLayout>
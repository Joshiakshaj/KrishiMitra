<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pmkisansanman"
    android:background="@color/Background_black">

    <TextView
        android:id="@+id/pt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:text="PM Kisan Samman Nidhi Yojana"
        android:textColor="@color/text_black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pradhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pt1"
        android:text="The main objective of the scheme is to transfer the amount of Rupees 6000 to the account of farmers annually.\n\nThis scheme is very helpful to all those small and marginal farmers who need to buy various farm implements and meet other agricultural expenses."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold" />

















</RelativeLayout>
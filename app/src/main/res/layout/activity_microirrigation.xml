<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".microirrigation"
    android:background="@color/Background_black">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pt1"
        android:text="Micro Irrigation Fund scheme"
        android:textColor="@color/text_black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        />


    <TextView
        android:id="@+id/pradhan"
        android:layout_below="@id/pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The scheme is aimed to remove the hurdles of irrigation. Most farmers are depended on rain for their crops. Through this scheme, the government aims to provide irrigation facilities to the farmers.
 Farmers can take up new and upcoming irrigation project. Farmers are no longer dependent on rain only."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>





</RelativeLayout>
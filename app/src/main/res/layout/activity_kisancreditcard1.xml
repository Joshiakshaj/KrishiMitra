<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kisancreditcard1"
    android:background="@color/Background_black">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pt1"
        android:text="Kisan Credit Card (KCC)"
        android:textColor="@color/text_black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        />


    <TextView
        android:id="@+id/pradhan"
        android:layout_below="@id/pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This scheme was launched in 1998 to provide credit facilities to farmers. The scheme intends to provide enough credit to farmers for their agriculture expenses.
The scheme aims to not keep farmers cash-starved. Farmers are not at the mercy of money lenders for agricultural expenses.
Farmers will have the minimum working capital required to meet their day-to-day expenses."

        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>





</RelativeLayout>